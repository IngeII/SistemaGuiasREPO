@model GuiasOET.Models.DIASLIBRES
@using PagedList.Mvc;
@using PagedList;
@using System.Diagnostics;

@{
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
    ViewBag.Title = "Módulo de Asignación de Días Libres";
}

<div class="row">
    <div class="col-md-9">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-lg-3">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <br />
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <label>Guía interno:</label>
    </div>

    <div class="col-md-9" col-sm-offset-1>
        @Html.DisplayFor(modelo => modelo.guias1.NOMBREEMPLEADO)
        @Html.DisplayFor(modelo => modelo.guias1.APELLIDO1)
        @Html.DisplayFor(modelo => modelo.guias1.APELLIDO2)
    </div>
</div>
<div class="row">

    <div class="col-lg-3">
        <label>Estación:</label>
    </div>

    <div class="col-md-9" col-sm-offset-1>
        @Html.DisplayFor(modelo => modelo.guias1.NOMBREESTACION)
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <br />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("AsignarRol", "AsignacionDiasLibres", FormMethod.Get))
            {
            <p>
                Días libres asignados<br />
                Criterio de búsqueda: Desde: <input type="date" name="fechaDesde" value="@ViewBag.CurrentFilter1">
                Hasta: <input type="date" name="fechaHasta" value="@ViewBag.CurrentFilter2">
                <input type="submit" value="Buscar" class="btn btn-default" style="background-color: #7BC143; color:white;" />
            </p>

        }
    </div>
</div>


<div class="table-responsive">
    <table class="table">

        <div class="row">
            <div class="col-lg-12">
                    <tr>
                        <th>
                            @Html.ActionLink("Fecha", "AsignarReservacion", new { sortOrder = ViewBag.ReservacionSortParm, currentFilter1 = ViewBag.CurrentFilter1, currentFilter2 = ViewBag.CurrentFilter2 })
                        </th>

                        <th>
                            @Html.ActionLink("Tipo", "AsignarReservacion", new { sortOrder = ViewBag.NombreSortParm, currentFilter1 = ViewBag.CurrentFilter1, currentFilter2 = ViewBag.CurrentFilter2 })
                        </th>

                        <th>
                        </th>

                    </tr>
             
                    @for (int i = 0; i < Model.roldialibre.Count; ++i)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.roldialibre.ElementAt(i).FECHA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.roldialibre.ElementAt(i).FECHA)
                            </td>
                            <td>
                                <a href="@Url.Action("ModificarRol")">
                                    <span class="btn btn-default fa fa-pencil" aria-hidden="true" title="Editar" style="background-color: #7BC143; color:white;"></span>
                                </a>
                                <a href="@Url.Action("EliminarRol")">
                                    <span class="btn btn-default fa fa-trash-o" aria-hidden="true" title="Editar" style="background-color: #F26631; color:white;"></span>
                                </a>
                            </td>
                        </tr>
                    }
            </div>
        </div>
    </table>
</div>

