@model GuiasOET.Models.GUIAS_EMPLEADO.ReestablecerContraseñaMetadata
@{
    ViewBag.Title = "Restablecer Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div class="row">
    <div class="col-sm-9">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <hr />
    </div>

</div>

<br>

<div class="row">


    @using (Html.BeginForm("ReestablecerContraseña", "AdministracionUsuarios", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {


        @Html.AntiForgeryToken()

        <div class="col-sm-6">
            <div class="form-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <br>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    @Html.LabelFor(m => m.USUARIO_EMAIL, new { @class = "control-label" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.USUARIO_EMAIL, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.USUARIO_EMAIL, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    @Html.LabelFor(m => m.CONTRASENA, new { @class = "control-label" })
                                </div>
                                <div class="col-sm-8">
                                    @Html.PasswordFor(m => m.CONTRASENA, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CONTRASENA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    @Html.LabelFor(m => m.CONFIRMACIONCONTRASENA, new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 col-sm-pull-1">
                                    @Html.PasswordFor(m => m.CONFIRMACIONCONTRASENA, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CONFIRMACIONCONTRASENA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-7 col-sm-push-4">
                                    <input type="submit" value="Aceptar" class="btn btn-default" style="width:28%" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


